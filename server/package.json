{
  "name": "quordle-server",
  "version": "1.0.0",
  "description": "Quordle game server for Discord Activity",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node server.js & node bot.js",
    "start:server": "node server.js",
    "start:bot": "node bot.js",
    "dev": "node --watch server.js",
    "dev:bot": "node --watch bot.js",
    "typecheck": "tsc --noEmit",
    "setup:entry-point": "node scripts/configure-entry-point.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
