    "discord.js": "^14.25.1",
    "dotenv": "^17.0.0",
    "express": "^4.18.2",
    "ioredis": "^5.9.2",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.13",
    "typescript": "^5.7.0"
  }
